<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".HomeActivity">

    <!-- IMAGE -->

    <ImageView
        android:id="@+id/home_screen_icon"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/gsb_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- TITLE -->

    <TextView
        android:id="@+id/home_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_title"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/home_screen_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
/>

    <!-- SAISIR CR -->
    <Button
        android:id="@+id/home_screen_add_cr_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/custom_rounded_button"
        android:text="@string/home_screen_add_cr_button"
        app:layout_constraintTop_toBottomOf="@+id/home_screen_title" />

    <!-- CONSULTER CR  -->

    <Button
        android:id="@+id/home_screen_show_cr_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/custom_rounded_button"
        android:text="@string/home_screen_show_cr_button"
        app:layout_constraintTop_toBottomOf="@+id/home_screen_add_cr_button" />

    <!-- LOGOUT -->



</android.support.constraint.ConstraintLayout>